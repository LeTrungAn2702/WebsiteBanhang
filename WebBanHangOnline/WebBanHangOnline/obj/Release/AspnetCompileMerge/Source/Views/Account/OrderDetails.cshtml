@model WebBanHangOnline.Models.EF.Order

<table class="order-detail-table">
    <thead>
        <tr>
            <th>Ảnh</th>
            <th>Sản phẩm</th>
            <th>Số lượng</th>
            <th>Đơn giá</th>
            <th>Thành tiền</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.OrderDetails)
        {
            <tr>
                <td>
                    <div class="product-img-box">
                        <img src="@Url.Content("~/" + item.Product.Image)" alt="@item.Product.Title" />
                    </div>
                </td>
                <td class="product-name">@item.Product.Title</td>
                <td class="quantity">@item.Quantity</td>
                <td class="price">@item.Price.ToString("N0") VND</td>
                <td class="total">@((item.Quantity * item.Price).ToString("N0")) VND</td>
            </tr>
        }
    </tbody>
</table>
